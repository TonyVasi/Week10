import java.util.Scanner;

public class GuessANumber
{
    RandomNumber random = new RandomNumber();
    public int getANumber()
    {
        int num = random.setLowNum(1) + (int)(Math.random()*random.setHighNum(10));
        return num;
    }
    public static void main(String args[])
    {
        RandomNumber random = new RandomNumber();
        Scanner input = new Scanner(System.in);

        /**System.out.println("Pick a maximum number.");
        int max = input.nextInt();*/

        System.out.println("Guess a number between 1 and 10."/** + max + "."*/);
        int guess = input.nextInt();
        int answer = random.getANumber();
        /**int answer = random.GetANumber_Between_1_And_10(max);*/

        if(guess == answer)
        {
            System.out.println("You got it!");
        } else
        {
            System.out.println("Sorry, you didn't get it!");
        }
        System.exit(0);
    }
}


public class RandomNumber
{
    private int num = 0;
    public int GetANumber_Between_1_And_10(int high)
    {
        num = 1 + (int)(Math.random()*high);
        return num;
    }
    public int getANumber()
    {
        num = 1 + (int)(Math.random()*10);
        return num;
    }
    public int setLowNum(int low)
    {
        return low;
    }
    public int setHighNum(int high)
    {
        return high;
    }
}

